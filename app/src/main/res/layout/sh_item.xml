<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/purple_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <CheckBox
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/checked"/>

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:id="@+id/image_checked"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/checked"
            android:layout_height="match_parent"
            />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_width="wrap_content"
        android:id="@+id/tv_name_text6"
        app:layout_constraintRight_toLeftOf="@id/tv_name_number"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/image_checked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_text6"
        android:id="@+id/tv_princ"
        app:layout_constraintLeft_toRightOf="@id/image_checked"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_name_number"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:id="@+id/tv_check_true"
        android:visibility="gone"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="已选择:>"/>

        <TextView
            android:background="@drawable/backgroudselect"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_check_true"
            android:text="-"
            android:visibility="gone"
            android:id="@+id/tv_minuse"
            android:gravity="center"
           app:layout_constraintRight_toLeftOf="@id/tv_name_number"/>


         <TextView
            android:background="@drawable/backgroudselect"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_check_true"
            android:text="+"
             android:visibility="gone"
             android:id="@+id/tv_plus"
            android:gravity="center"
           app:layout_constraintLeft_toRightOf="@id/tv_name_number"/>


</androidx.constraintlayout.widget.ConstraintLayout>