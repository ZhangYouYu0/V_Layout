<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3B0B0"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ShoppingBlankFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/Shopping_recy"
        app:layout_constraintTop_toTopOf="parent"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <CheckBox
            app:layout_constraintBottom_toBottomOf="@id/bnt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选（5）"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/checked_all"/>

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/checked_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/tv_pirc1"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintRight_toLeftOf="@id/editing"
            android:text="￥"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/editing"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"

            android:padding="10dp"
            app:layout_constraintRight_toLeftOf="@id/bnt"
            android:gravity="center"
            />

        <Button
            android:id="@+id/bnt"
            android:layout_width="wrap_content"
            android:backgroundTint="#E43B3B"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="下载" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>