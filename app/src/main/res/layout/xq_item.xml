<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="#A6A4A4"
    android:paddingTop="10dp"
    android:layout_margin="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.youth.banner.Banner
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:id="@+id/banner_home_spxq"/>

    <LinearLayout
        android:id="@+id/ll_home_spxq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@id/banner_home_spxq"
        >
        <TextView
            android:id="@+id/tv_home_spxq_th"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:text="30天无忧退货" />
         <TextView
             android:id="@+id/tv_home_spxq_tk"
             android:layout_weight="1"
             android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="48小时快速退款"
        />
         <TextView

             android:id="@+id/tv_home_spxq_yf"
             android:layout_weight="1"
             android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="满88元免邮费"
          />


    </LinearLayout>

<TextView
    android:background="@color/white"
    android:layout_marginTop="20dp"
    android:id="@+id/tv_home_spxq_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"

    android:textSize="30dp"
    app:layout_constraintTop_toBottomOf="@id/ll_home_spxq"/>

    <TextView
        android:background="@color/white"
    android:id="@+id/tv_home_spxq_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"

    android:textSize="20dp"
    app:layout_constraintTop_toBottomOf="@id/tv_home_spxq_name"/>

    <TextView
        android:background="@color/white"
    android:id="@+id/tv_home_spxq_pic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
        android:textColor="#DF0A0A"
    android:textSize="25dp"
    app:layout_constraintTop_toBottomOf="@id/tv_home_spxq_desc"/>


</androidx.constraintlayout.widget.ConstraintLayout>