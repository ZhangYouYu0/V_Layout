<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeActivity.HomeChildFragment.Activity.HomeChileShoppingMainActivity">

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/home_ac_banner"/>


    <LinearLayout
        android:id="@+id/home_ac_ll"
        android:layout_width="match_parent"
        android:background="#DFDFDF"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_ac_banner"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30天无忧退货"/>

        <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="48小时快速退款"/>
        <TextView
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="满88元免邮费"/>

    </LinearLayout>

    <TextView
        android:id="@+id/home_ac_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/home_ac_ll"/>

    <TextView
        android:id="@+id/home_ac_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/home_ac_name"/>


    <TextView
        android:id="@+id/home_ac_pic"
        android:layout_width="match_parent"
        android:textColor="#FD0202"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/home_ac_desc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/home_ac_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="请选择商品数量"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:text=">"
        android:id="@+id/home_ac_0"
        app:layout_constraintTop_toBottomOf="@id/home_ac_pic"
        android:textSize="19dp"
        />



    <TextView
        android:layout_width="match_parent"
        android:background="#BCBABA"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:id="@+id/home_ac_1"
        app:layout_constraintTop_toBottomOf="@+id/home_ac_0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="查看全部    >"
        app:layout_constraintTop_toBottomOf="@+id/home_ac_1"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:id="@+id/home_ac_2"
        />

    <TextView
        android:layout_width="match_parent"
        android:background="#BCBABA"
        android:layout_marginTop="10dp"
        android:id="@+id/home_ac_3"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/home_ac_2"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/home_ac_3"
        android:layout_width="match_parent"
        android:id="@+id/tv_pl"
        android:layout_height="wrap_content"
        android:text="宝贝评论(1)"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pl"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/im_user"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:text="12313112"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/im_user"
        android:id="@+id/tv_user_name"
        app:layout_constraintLeft_toRightOf="@id/im_user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="20021321321"
        app:layout_constraintTop_toBottomOf="@id/im_user"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_user_title"
        android:textColor="#979696"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_user_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_user_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="12313"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_user_desc"
        android:text="商品参数"
        android:textSize="18dp"
        android:id="@+id/home_ac_4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDBDBD"
        android:layout_marginTop="10dp"
        android:id="@+id/home_ac_cc"
        app:layout_constraintTop_toBottomOf="@id/home_ac_4"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDBDBD"
        android:layout_marginTop="10dp"
        android:id="@+id/home_ac_zl"
        app:layout_constraintTop_toBottomOf="@id/home_ac_cc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDBDBD"
        android:layout_marginTop="10dp"
        android:id="@+id/home_ac_mj"
        app:layout_constraintTop_toBottomOf="@id/home_ac_zl"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDBDBD"
        android:id="@+id/home_ac_bz"
        app:layout_constraintTop_toBottomOf="@id/home_ac_mj"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BDBDBD"
        android:id="@+id/home_ac_hh"
        app:layout_constraintTop_toBottomOf="@id/home_ac_bz"/>


</androidx.constraintlayout.widget.ConstraintLayout>