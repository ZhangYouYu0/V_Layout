<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image4"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/image4"
        app:layout_constraintLeft_toLeftOf="@id/image4"
        app:layout_constraintRight_toRightOf="@id/image4"
        android:id="@+id/tv_name_text5"
        android:gravity="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/image4"/>

</androidx.constraintlayout.widget.ConstraintLayout>